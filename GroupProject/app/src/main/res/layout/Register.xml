<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#17202A"
    tools:context="com.example.user.groupproject.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".22"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/running" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:text="Squad"
        android:textColor="#ffffff"
        android:textSize="47dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:text="Link"
        android:textColor="#FF4500"
        android:textSize="55dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Strive for Better"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="241dp" />

    <Button
        android:id="@+id/fname"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="45dp"
        android:alpha=".75"
        android:text="FIRST NAME"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/surname"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/fname"
        android:layout_alignStart="@+id/fname"
        android:layout_below="@+id/fname"
        android:alpha=".75"
        android:text="SURNAME"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
    android:id="@+id/gender"
    android:layout_width="240dp"
    android:layout_height="38dp"
    android:layout_alignLeft="@+id/surname"
    android:layout_alignStart="@+id/surname"
    android:layout_below="@+id/surname"
    android:alpha=".75"
    android:text="GENDER"
    tools:layout_editor_absoluteX="98dp"
    tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/email"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_below="@+id/gender"
        android:alpha=".75"
        android:text="EMAIL ADDRESS"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/uname"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:alpha=".75"
        android:text="USERNAME"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
    android:id="@+id/pword"
    android:layout_width="240dp"
    android:layout_height="38dp"
    android:layout_alignLeft="@+id/uname"
    android:layout_alignStart="@+id/uname"
    android:layout_below="@+id/uname"
    android:alpha=".75"
    android:text="PASSWORD"
    tools:layout_editor_absoluteX="98dp"
    tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/conpword"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/pword"
        android:layout_alignStart="@+id/pword"
        android:layout_below="@+id/pword"
        android:alpha=".75"
        android:text="CONFIRM PASSWORD"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_below="@+id/pword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/haccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:background="#00FFFFFF"
        android:text="Already registered. Click here "
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="447dp" />

</RelativeLayout>
