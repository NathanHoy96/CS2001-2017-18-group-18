<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#17202A"
    tools:context="com.example.user.groupproject.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".22"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/running" />

    <TextView
        android:id="@+id/squad"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/link"
        android:layout_marginBottom="35dp"
        android:layout_toLeftOf="@+id/link"
        android:layout_toStartOf="@+id/link"
        android:text="Squad"
        android:textColor="#ffffff"
        android:textSize="47dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_username"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:layout_marginBottom="63dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Link"
        android:textColor="#FF4500"
        android:textSize="55dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squad"
        android:layout_centerHorizontal="true"
        android:text="Strive for Better"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="241dp" />

    <ImageButton
        android:id="@+id/imagepword"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_above="@+id/button_login"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:alpha=".75"
        app:srcCompat="@android:drawable/ic_secure"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/button_password"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_above="@+id/button_login"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignRight="@+id/button_login"
        android:alpha=".75"
        android:text="Password"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="339dp" />

    <ImageButton
        android:id="@+id/imageuname"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/button_username"
        android:layout_toLeftOf="@+id/button_username"
        android:layout_toStartOf="@+id/button_username"
        android:alpha=".75"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/username"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/button_username"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_above="@+id/button_password"
        android:layout_alignLeft="@+id/button_password"
        android:layout_alignStart="@+id/button_password"
        android:alpha=".75"
        android:text="Username"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="286dp"
        android:layout_height="42dp"
        android:layout_above="@+id/button_account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/button_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="#00FFFFFF"
        android:text="Create an Account"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="447dp" />

</RelativeLayout>
